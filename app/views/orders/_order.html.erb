<h2>Open Orders</h2>
  <table>
    <thead>
      <tr>
        <th>Order Id</th>
        <th>Product</th>
        <th>Price</th>
        <th>Customer</th>
      </tr>
    </thead>
    <tbody>
      <tr>
          <td><%= order.id %></td>
          <% if @product %>
          <td><%= product.name %></td>
          <td><%= product.price %></td>
          <% end %>
        <td><%= order.customer.name %></td>
      </tr>
    </tbody>
  </table>
